<% unless current_user == @user %> 
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.follows.find_by(follow_id: @user.id), method: :delete, local: true) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit 'アンフォロー' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.follows.build, local: true) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit 'フォロー' %>
    <% end %>
  <% end %>
<% end %>
