<% if current_user != user %> 
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.active_follows.find_by(followee_id: user.id), method: :delete) do |f| %>
      <%= hidden_field_tag :followee_id, user.id %>
      <%= f.submit 'アンフォロー' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_follows.build) do |f| %>
      <%= hidden_field_tag :followee_id, user.id %>
      <%= f.submit 'フォロー' %>
    <% end %>
  <% end %>
<% end %>
