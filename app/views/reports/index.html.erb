<h1><%= Report.model_name.human %></h1>

<% if @reports.present? %>
  <table>
    <thead>
      <tr>
        <th><%= Report.human_attribute_name(:title) %></th>
        <th><%= Report.human_attribute_name(:user) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.title %></td>
          <td><%= report.user.contributor_name %></td>
          <td><%= link_to t('views.common.show'), report_path(report) %></td>
          <% if current_user == report.user %>
            <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
            <td><%= link_to t('views.common.destroy'), report_path(report), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>日報はありません</p>
<% end %>


