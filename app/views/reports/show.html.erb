<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %>:</strong>
  <%= @report.content %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= l @report.created_at, format: :long %>
</p>

<%= render 'comments/index', commentable: [@report.user, @report], comments: @comments %>

<%= render 'comments/form', form_model: [@report.user, @report, Comment.new] %>

<%= link_to t('views.common.edit'), edit_user_report_path(@report.user, @report) %> |
<%= link_to t('views.common.back'), user_reports_path %>
